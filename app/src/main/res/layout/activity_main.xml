<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6F8"
    tools:context=".MainActivity">

    <!-- LOGO -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/logo_restaurant"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- PLATO 1 -->
    <ImageView
        android:id="@+id/imgPastel"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:src="@drawable/pastel_choclo"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtPastelNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pastel de Choclo"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/imgPastel"
        app:layout_constraintTop_toTopOf="@id/imgPastel"/>

    <TextView
        android:id="@+id/txtPastelCant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cant."
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/txtPastelNombre"
        app:layout_constraintTop_toBottomOf="@id/txtPastelNombre"/>

    <EditText
        android:id="@+id/edtCantPastel"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBaselineOf="@id/txtPastelCant"
        app:layout_constraintStart_toEndOf="@id/txtPastelCant" />

    <TextView
        android:id="@+id/txtPastelSubtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/txtPastelNombre"
        app:layout_constraintTop_toBottomOf="@id/edtCantPastel"/>

    <!-- PLATO 2 -->
    <ImageView
        android:id="@+id/imgCazuela"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:src="@drawable/cazuela"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/imgPastel"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtCazuelaNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cazuela"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/imgCazuela"
        app:layout_constraintTop_toTopOf="@id/imgCazuela"/>

    <TextView
        android:id="@+id/txtCazuelaCant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cant."
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/txtCazuelaNombre"
        app:layout_constraintTop_toBottomOf="@id/txtCazuelaNombre"/>

    <EditText
        android:id="@+id/edtCantCazuela"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/txtCazuelaCant"
        app:layout_constraintBaseline_toBaselineOf="@id/txtCazuelaCant"/>

    <TextView
        android:id="@+id/txtCazuelaSubtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/txtCazuelaNombre"
        app:layout_constraintTop_toBottomOf="@id/edtCantCazuela"/>

    <!-- BLOQUE DE TOTALES CENTRADO -->
    <LinearLayout
        android:id="@+id/layoutTotales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/imgCazuela"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- FILA COMIDA -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="172dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtLabelComida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:text="Comida"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtTotalComida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@id/txtLabelComida"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- FILA PROPINA -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <!-- Switch alineado totalmente a la izquierda del bloque -->
            <Switch
                android:id="@+id/switchPropina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Texto "Propina" alineado con Comida y TOTAL -->
            <TextView
                android:id="@+id/txtLabelPropina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Propina"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@id/switchPropina"
                app:layout_constraintStart_toEndOf="@id/switchPropina" />

            <!-- Monto alineado a la derecha -->
            <TextView
                android:id="@+id/txtTotalPropina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@id/txtLabelPropina"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- FILA TOTAL -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/txtLabelTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:text="TOTAL"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtTotalFinal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@id/txtLabelTotal"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
